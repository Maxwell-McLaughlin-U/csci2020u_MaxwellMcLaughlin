<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label fx:id="UsernameLabel" text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2"/>
    <Label fx:id="lblPassword" text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"
           GridPane.columnSpan="2"/>
    <Label fx:id="lblName" text="FullName:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"
           GridPane.columnSpan="2"/>
    <Label fx:id="lvlEmail" text="E-mail:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="2"/>
    <Label fx:id="lblPhone" text="Phone #:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"
           GridPane.columnSpan="2"/>
    <Label fx:id="lblBirth" text="Date Of Birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"
           GridPane.columnSpan="2"/>

    <TextField fx:id="txtUserName"
               GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <TextField fx:id="txtPassword"
               GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <TextField fx:id="txtFullName"
               GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <TextField fx:id="txtEmail"
               GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <TextField fx:id="txtPhone"
               GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <TextField fx:id="txtBirth"
               GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Button fx:id="btnRegister" text="Register"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            onAction="#buttonClicked"/>
</GridPane>